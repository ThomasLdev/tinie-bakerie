<div {{ attributes }}>
    <!-- Search Input -->
    <div class="p-4 border-b border-gray-100">
        <div class="relative">
            <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 w-4 h-4 text-gray-400" fill="none"
                 stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
            <input
                type="text"
                data-model="query"
                data-action="live#update"
                value="{{ query }}"
                placeholder="Search for recipes, ingredients, categories..."
                class="w-full pl-10 pr-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-300 focus:border-transparent text-sm"
                autocomplete="off"
            >
        </div>
    </div>

    <!-- Search Results -->
    <div class="max-h-96 overflow-y-auto">
        {% if query|length >= 2 %}
            {% set results = this.getResults() %}
            {% if results|length > 0 %}
                <!-- Results Header -->
                <div class="px-4 py-2 border-b border-gray-100 bg-gray-50">
                    <span class="text-xs font-medium text-gray-500">{{ this.getResultCount() }} result{% if this.getResultCount() > 1 %}s{% endif %} found</span>
                </div>

                <!-- Recipe Results -->
                <div class="divide-y divide-gray-100">
                    {% for result in results %}
                        <a href="#"
                           class="flex items-center p-4 hover:bg-gray-50 transition-colors duration-150 group">
                            <div class="flex-1 min-w-0">
                                <h4 class="text-sm font-medium text-gray-900 truncate">
                                    {{ result.title|raw }}
                                </h4>
                                {% if result.excerpt %}
                                    <p class="text-xs text-gray-500 mt-1 line-clamp-2">
                                        {{ result.excerpt|striptags|slice(0, 100) }}{% if result.excerpt|length > 100 %}...{% endif %}
                                    </p>
                                {% endif %}
                                {% if result.categoryTitle %}
                                    <p class="text-xs text-gray-400 mt-1">
                                        {{ result.categoryTitle }}
                                    </p>
                                {% endif %}
                            </div>
                            <svg class="w-4 h-4 text-gray-400 group-hover:text-gray-600 transition-colors duration-150 ml-3 flex-shrink-0"
                                 fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                            </svg>
                        </a>
                    {% endfor %}
                </div>


            {% else %}
                <!-- No Results State -->
                <div class="p-8 text-center">
                    <svg class="w-12 h-12 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                    <h3 class="text-sm font-medium text-gray-900 mb-2">No recipes found</h3>
                    <p class="text-xs text-gray-500">Try adjusting your search or browse our categories</p>
                </div>
            {% endif %}
        {% else %}
            <!-- Recent Searches or Suggestions (when no input or too short) -->
            <div class="p-4">
                <h3 class="text-xs font-medium text-gray-500 uppercase tracking-wider mb-3">Start typing to search...</h3>
                <p class="text-xs text-gray-400">Search for recipes, ingredients, or categories</p>
            </div>
        {% endif %}
    </div>
</div>
