<div {{ attributes }}>
    <div class="p-4 border-b border-gray-100">
        <div class="relative">
            <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 w-4 h-4 text-gray-400" fill="none"
                 stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
            <label>
                <input
                    type="text"
                    data-model="query"
                    value="{{ query }}"
                    placeholder="{{ 'app.search.placeholder.label'|trans }}"
                    class="w-full pl-10 pr-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2
                    focus:ring-gray-300 focus:border-transparent text-sm"
                    autocomplete="off"
                >
            </label>
        </div>
    </div>
    <div class="max-h-96 overflow-y-auto">
        {% if query|length >= 2 %}
            {% set results = this.getResults() %}

            {% if this.hasResults() %}
                <div class="px-4 py-2 border-b border-gray-100 bg-gray-50">
                    <span class="text-xs font-medium text-gray-500">
                        {{ 'app.search.result_count.label'|trans({'%count%': this.getResultCount()}) }}
                    </span>
                </div>
                <div class="divide-y divide-gray-100">
                    {% for result in results %}
                        <a href="{{ result.url }}"
                           class="flex items-center p-4 hover:bg-gray-50 transition-colors duration-150 group">
                            <div class="flex-1 min-w-0">
                                <h4 class="text-sm font-medium text-gray-900 truncate">
                                    {{ result.title }}
                                </h4>
                                {% if result.excerpt %}
                                    <p class="text-xs text-gray-500 mt-1 line-clamp-2">
                                        {{ result.excerpt|striptags|slice(0, 100) }}
                                        {% if result.excerpt|length > 100 %}
                                            ...
                                        {% endif %}
                                    </p>
                                {% endif %}
                                {% if result.categoryTitle %}
                                    <p class="text-xs text-gray-400 mt-1">
                                        {{ result.categoryTitle }}
                                    </p>
                                {% endif %}
                                {% if result.tags %}
                                    {% for tag in result.tags %}
                                    <span class="text-xs text-gray-400 mt-1">
                                        {{ tag }}
                                    </span>
                                    {% endfor %}
                                {% endif %}
                            </div>
                            <svg class="w-4 h-4 text-gray-400 group-hover:text-gray-600 transition-colors
                            duration-150 ml-3 flex-shrink-0"
                                 fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7">
                                </path>
                            </svg>
                        </a>
                    {% endfor %}
                </div>
            {% else %}
                <div class="p-8 text-center">
                    <svg class="w-12 h-12 mx-auto text-gray-300 mb-4"
                         fill="none" stroke="currentColor"
                         viewBox="0 0 24 24"
                    >
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                    <h3 class="text-sm font-medium text-gray-900 mb-2">{{ 'app.search.no_result.label'|trans }}</h3>
                    <p class="text-xs text-gray-500">{{ 'app.search.no_result.help'|trans }}</p>
                </div>
            {% endif %}
        {% else %}
            <div class="p-4">
                <h3 class="text-xs font-medium text-gray-500 uppercase tracking-wider mb-3">
                    {{ 'app.search.no_input.label'|trans }}
                </h3>
                <p class="text-xs text-gray-400">
                    {{ 'app.search.no_input.help'|trans }}
                </p>
            </div>
        {% endif %}
    </div>
</div>
