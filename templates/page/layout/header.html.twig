<header class="bg-white sticky top-0 z-10 relative">
    <div class="max-w-7xl mx-auto xl:px-0 px-4 border-b-2">
        <div class="flex justify-between items-center py-4 transition-all duration-300 border-b border-gray-200 w-full">
            <div class="flex items-center w-full justify-center md:justify-start flex-col md:flex-row">
                <a href="{{ path('app_homepage_index') }}" class="text-2xl font-playfair font-bold text-gray-900 tracking-wide">
                    {{ 'app.global.site'|trans|upper }}
                </a>
                <p class="text-xs text-gray-500 ml-2 mt-1">{{ 'app.global.slogan'|trans|upper }}</p>
            </div>
            <div class="flex items-center space-x-4 hidden md:block">
                <div class="flex space-x-2">
                    <div class="w-6 h-6 bg-gray-300 rounded-full"></div>
                    <div class="w-6 h-6 bg-gray-300 rounded-full"></div>
                    <div class="w-6 h-6 bg-gray-300 rounded-full"></div>
                    <div class="w-6 h-6 bg-gray-300 rounded-full"></div>
                    <div class="w-6 h-6 bg-gray-300 rounded-full"></div>
                </div>
            </div>
        </div>
        <nav class="flex flex-wrap justify-between md:justify-start md:space-x-8 py-5 text-xs sm:text-sm font-medium text-gray-600">
            <a href="{{ path('app_post_index') }}"
               class="hover:text-gray-900">
                {{ 'app.global.menu.explore'|trans|upper }}
            </a>
            {% if categories is defined and categories is not same as null %}
                <div class="cursor-pointer group" {{ stimulus_controller('dropdown') }}>
                    <a class="hover:text-gray-900 flex items-center" {{ stimulus_action('dropdown', 'displayCollapsable', 'click') }}>
                        {{ 'app.global.menu.categories'|trans|upper }}
                        <svg class="ml-1 w-3 h-3 transition-transform duration-200"
                             fill="currentColor"
                             viewBox="0 0 20 20"
                             {{ stimulus_target('dropdown', 'icon') }}
                        >
                            <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                        </svg>
                    </a>
                    {% include 'page/layout/include/_category-submenu.html.twig' %}
                </div>
            {% endif %}
            <div class="cursor-pointer group" {{ stimulus_controller('dropdown') }}>
                <a class="hover:text-gray-900 flex items-center" {{ stimulus_action('dropdown', 'displayCollapsable', 'click') }}>
                    {{ 'app.global.menu.search'|trans|upper }}
                    <svg class="ml-1 w-3 h-3 transition-transform duration-200"
                         fill="currentColor"
                         viewBox="0 0 20 20"
                        {{ stimulus_target('dropdown', 'icon') }}
                    >
                        <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                    </svg>
                </a>
                {% include 'page/layout/include/_search-bar.html.twig' %}
            </div>
        </nav>
    </div>
</header>
