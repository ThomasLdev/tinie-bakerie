{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
    <div>
        <a href="{{ path('app_homepage_index') }}">Back home</a>
    </div>

    {% if posts is defined and posts is not empty %}
        <div class="flex flex-col">
            {% for post in posts %}
                {% set category = post.category %}

                <div class="flex flex-col items-center gap-2 justify-center p-4 m-2 bg-gray-100 border rounded-lg shadow-md">
                    <a href="{{ path('app_post_show', {'postSlug': post.slug, 'categorySlug': category.slug}) }}">
                        {{ post.title }}
                    </a>
                    <p>Category : {{ category.title }}</p>
                    <p>{{ 'app.global.created_at'|trans ~ post.createdAt|date }}</p>
                    <p>{{ 'app.global.updated_at'|trans ~ post.updatedAt|date }}</p>
                    <div>
                        {% for tag in post.tags %}
                            <span style="background-color: {{ tag.color }}">
                                {{ tag.title }}
                            </span>
                        {% endfor %}
                    </div>

                    {% for medium in post.media %}
                        {% set src = vich_uploader_asset(medium) %}

                        {% if medium.type is same as constant('App\\Services\\Media\\Enum\\MediaType::Image') %}
                            <img src="{{ src }}" alt="{{ medium.alt }}" width="300">
                        {% else %}
                            <video autoplay loop poster="{{ src }}" title="{{ medium.title }}" width="300">
                                <source src="{{ src }}" type="video/mp4">
                            </video>
                        {% endif %}
                    {% endfor %}
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
