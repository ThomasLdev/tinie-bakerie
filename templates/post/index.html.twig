{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
    {% if posts is defined and posts is not empty %}
        <div class="flex flex-col justify-center">
            {% for post in posts %}
                <a href="{{ path('app_post_show', {'slugCategory': post.categorySlug, 'slugPost': post.postSlug}) }}">
                    <img
                        src="{{ asset('upload/post_thumbnail/' ~ post.imageName) }}"
                        alt="{{ post.postTitle }}"
                        width="300px"
                    >
                    {{ post.postTitle }}
                </a>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
