{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
    {% if posts is defined and posts is not empty %}
        <div class="flex flex-col">
            {% for post in posts %}
                <div class="flex flex-col items-center gap-2 justify-center p-4 m-2 bg-gray-100 border rounded-lg shadow-md">
                    <p>{{ post.title }}</p>
                    <p>{{ 'app.post.show.created_at'|trans ~ post.createdAt|date }}</p>
                    <p>{{ 'app.post.show.updated_at'|trans ~ post.updatedAt|date }}</p>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
