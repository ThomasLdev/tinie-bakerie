{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
    {% if posts is defined and posts is not empty %}
        <div class="flex flex-col">
            {% for post in posts %}
                <div class="flex flex-col items-center gap-2 justify-center p-4 m-2 bg-gray-100 border rounded-lg shadow-md">
                    <a href="{{ path('app_post_show', {'postSlug': post.slug, 'categorySlug': post.category.slug}) }}">
                        {{ post.title }}
                    </a>
                    <p>Category : {{ post.category.title }}</p>
                    <p>{{ 'app.post.show.created_at'|trans ~ post.createdAt|date }}</p>
                    <p>{{ 'app.post.show.updated_at'|trans ~ post.updatedAt|date }}</p>
                    <div>
                        {% for tag in post.tags %}
                            <span style="background-color: {{ tag.color }}">
                                {{ tag.title }}
                            </span>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
