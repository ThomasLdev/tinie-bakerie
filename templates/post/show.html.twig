{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
    {% if postTranslation is defined and postTranslation is not same as null %}
        <h1>{{ postTranslation.title }}</h1>
        <img src="{{ asset('upload/post_thumbnail/' ~ postTranslation.post.imageName) }}" alt="">
    {% endif %}
{% endblock %}
